<view class="post-container" bindtap="intoDetailPage" data-id="{{item.ID}}" wx:for="{{postList}}" wx:key="index" data-content='{{item.Content}}' data-username='{{item.UserName}}' data-title="{{item.Title}}" data-time='{{item.CreatedAt}}' data-price='{{item.Price}}' data-location='{{item.Location}}' data-isFollow='{{item.isFollow}}' data-isThumb='{{item.isThumb}}' data-isReplied='{{item.isReplied}}' data-follow='{{item.Follow}}' data-thumb='{{item.Thumb}}' data-reply='{{item.Reply}}' data-qq='{{item.QQ}}' data-wx="{{item.Wx}}">
  <view class="header">
    <view class="left">
      <image src="{{item.Avatar}}"></image>
      <text class="username">{{item.UserName}}</text>
    </view>
    <image class="more" src="../../static/more.svg" catchtap="reportPost" data-id="{{item.ID}}"></image>
  </view>
  <view class="second-line">
    <view class="title">{{item.Title}}</view>
    <view class="right">
      <view class="contact" catchtap="showContactInfo" data-qq="{{item.QQ}}" data-wx="{{item.Wx}}">
        <image src="../../static/contact.svg"></image>
        <text>联系</text>
      </view>
      <view class="price">{{item.Price}}</view>
    </view>
  </view>
  <view class="content" >
    {{item.Content}}</view>
  <view class="location">
    <text>{{item.Location}} </text><text> {{item.CreatedAt}}</text>
  </view>
  <view class="footer">
    <view class="item">
      <image src="../../static/share.svg"></image>
      <text>分享</text>
    </view>
    <view class="right">
      <view class="follow item" data-id="{{item.ID}}" data-index="{{index}}" catchtap="toggleFollow">
        <image src="{{item.isFollow?'../../static/followed.svg':'../../static/follow.svg'}}">
        </image><text>{{item.Follow}}</text>
      </view>
      <view class="reply item">
        <image src="{{item.isReplied?'../../static/replied.svg':'../../static/reply.svg'}}"></image><text>{{item.Reply}}</text>
      </view>
      <view class="thumb item" data-id="{{item.ID}}" data-index="{{index}}" catchtap="toggleThumbup">
        <image src="{{item.isThumb?'../../static/thumbed.svg':'../../static/thumb.svg'}}"></image><text>{{item.Thumb}}</text>
      </view>
    </view>
  </view>
</view>
<view class="contactInfoContainer overlay" wx:if="{{contactInfoShow}}" bindtap="hideContactInfo">
  <view class="contactInfo">
    <view class="content" catchtap="copyContactInfo" data-info="{{contactInfo.qq}}" data-type="qq"><text>Q Q： {{contactInfo.qq}}</text>
      <text class="copy">copy</text>
    </view>
    <view class="divider"></view>
    <view class="content" catchtap="copyContactInfo" data-info="{{contactInfo.wx}}" data-type="wx">
      <view>微信： {{contactInfo.wx}}</view>
      <text class="copy">copy</text>
    </view>
  </view>
</view>
