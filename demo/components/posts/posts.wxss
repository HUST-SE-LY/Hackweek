.post-container {
  background-color: white;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  width: 100vw;
  border-radius: 20rpx 0 20rpx 0;
  color: #333333;

}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 0rpx 50rpx;
}

.header .left {
  display: flex;
  align-items: center;

}

.header .left image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  border: #9CD8F2 solid 1px;
}

.username {
  margin-left: 20rpx;
}

.header .more {
  height: 40rpx;
  width: 40rpx;
}

.second-line {
  margin-top: -10rpx;
  box-sizing: border-box;
  padding: 0 50rpx 0 50rpx;
}

.second-line .title {
  width: 500rpx;
  text-align: left;
  font-weight: bold;
  font-size: 36rpx;
}

.second-line .price {
  font-size: 32rpx;
  text-align: right;
  font-weight: bold;
}

 .contact {
  position: relative;
  width: 180rpx;
  height: 80rpx;
  border-radius: 25rpx;
  color: black;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #F5F5F5;
  color:black;
  font-weight: 100;
}

.contact image {
  height: 36rpx;
  width: 36rpx;
  margin-right: 10rpx;
}

.post-container .content {
  box-sizing: border-box;
  padding: 0 50rpx;
  font-size: 36rpx;
  margin-top: 40rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.location {
  margin-top: 20rpx;
  align-self: flex-end;
  font-size: 26rpx;
  margin-right: 50rpx;
  color: rgba(0, 0, 0, 0.6);
}

.content {
  line-height: 1.5em;
  letter-spacing: 0.0015em;
  padding-right: 1em;
  
}

.footer {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  margin-bottom: 50rpx;
  padding: 0 50rpx;
}

.footer .item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.6);
  margin-right: 50rpx;
  margin-left: 0;
}

.share {
  background: transparent;
  display: block;
  padding-left: 0;
  padding-right: 40rpx;
  box-sizing: border-box;
  text-align: left;
}

.footer image {
  height: 45rpx;
  width: 45rpx;
  margin-right: 10rpx;
}

.footer .right {
  display: flex;
  
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 2;
}

.contactInfoContainer .contactInfo {
  position: fixed;
  top: 37vh;
  left: 50rpx;
  width: 650rpx;
  height: 15vh;
  background-color: #fff;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.contactInfoContainer .contactInfo .content {
  line-height: 6vh;
  margin: 5rpx 30rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.contactInfoContainer .contactInfo .content .copy {
  border: 1px solid rgba(0, 0, 0, 0.4);
  width: 100rpx;
  line-height: 4vh;
  text-align: center;
  border-radius: 15rpx;
}

.contactInfoContainer .contactInfo .divider {
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}