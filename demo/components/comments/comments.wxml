<!--components/comments/comments.wxml-->
<view wx:if="{{noComment}}" class="noComment">还没有评论呢</view>

<view wx:for="{{commentsList}}" wx:key="{{item.id}}" class="comment_container" wx:for-index="firstIndex">
  <view class="avatar"></view>
  <view class="main_container">
    <view class="comment_head">
      <view class="username" bindtap="replyOthers" data-name="{{item.UserName}}" data-id="{{item.ID}}" data-index="{{firstIndex}}">{{item.UserName}}</view>
      <view class="contact" catchtap="showContactInfo" data-qq="{{item.QQ}}" data-wx="{{item.Wx}}" data-avatar="{{item.Avatar}}" data-username="{{item.UserName}}">
        <image src="../../static/contact.svg"></image>
        <text>联系</text>
      </view>
    </view>
    <view class="main_content">{{item.Content}}</view>
    <view class="second_container" wx:if="{{item.ReplyComments.length}}">
      <view wx:for="{{item.ReplyComments}}" wx:for-item="items" class="second_single">
        <view class="reply_username" data-index="{{firstIndex}}" data-name="{{items.username1}}">{{items.UserName}}：</view>
        <view class="second_content"><text>{{items.Content}}</text></view>
      </view>

    </view>
  </view>
</view>