/* components/comments/comments.wxss */

view {
  word-break: break-all;
}

.comment_main {
  margin-bottom: 3%;
  display: flex;
  margin-top: 3%;
}

.comment_main_noflex {
  margin-bottom: 5%;
}

.comment_container {
  display: flex;
  box-sizing: border-box;
  padding-top: 15px;
  padding-bottom: 5%;
  border-bottom: lightgray 1px solid;
}

.main_container {
  margin-left: 15px;
  flex: auto;
}

.comment_head {
  display: flex;
  align-items: center;

}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  background-color: #CAE9F7;
  flex-shrink: 0;
}

.avatar image {
  width: 40px;
  height: 40px;
  border-radius: 20px;
}

.username {
  font-size: 12px;
}

.contact {
  width: 96px;
  height: 34px;
  border-radius: 10px;
  color: black;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #F5F5F5;
  color: black;
  font-size: 13px;
  font-weight: 100;
  margin-left: auto;
}

.main_content {
  margin-top: 4px;
  font-size: 12px;
}

.contact image {
  height: 20px;
  width: 20px;
  margin-right: 10rpx;
}

.comment_second {
  margin-bottom: 5%;
  flex-wrap: wrap;
  display: flex;
}

.second_container {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 15rpx;
  max-height: 8em;
  overflow-y: scroll;
  overflow-x: hidden;
}

.comment_second_noflex {
  margin-bottom: 5%;
}

.noComment {
  text-align: center;
  font-size: 12px;
  padding-top: 10px;
}


.content {
  padding: 20rpx;
}

.second_single {
  margin-bottom: 20rpx;
  font-size: 12px;
  line-height: 16px;
}

.second_content {
  width: auto;
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 2;
}

.contactInfoContainer .contactInfo {
  position: fixed;
  top: 37vh;
  left: 50rpx;
  width: 650rpx;
  background-color: #fff;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.contactInfoContainer .contactInfo .content {
  line-height: 8vh;
  margin: 5rpx 30rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.contactInfoContainer .contactInfo .content .copy {
  background-color: #ffffff;
  width: 100rpx;
  line-height: 4vh;
  text-align: center;
  border-radius: 20rpx;
}

.contactInfoContainer .contactInfo .divider {
  width: 80%;
  margin-left: 10%;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.contactInfo_head {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx;
}

.contactInfo_head .username {
  margin-left: 10px;
} 

.contactInfo_head image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  border: #9CD8F2 solid 1px;
}

.info_container {
  background-color: #F5F5F5;
  margin: 10rpx 30rpx 50rpx 30rpx;
  border-radius: 15rpx;
}





