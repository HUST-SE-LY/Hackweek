.replies .divider {
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.replies .item {
  display: flex;
  align-items: center;
}

.replies .item image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}

.replies .item .content {
  width: 600rpx;
  margin: 20rpx 30rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  /* 换行问题 */
  word-break: break-all;
  font-size: 26rpx;
  line-height: 40rpx;
}