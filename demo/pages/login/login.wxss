/* pages/login/login.wxss */
page {
  background-color: white;
}

@keyframes transYbottom {
  from {
    opacity: 0;
    margin-top: 35rem;
  }

  to {
    opacity: 1;
    margin-top: 2rem;
  }
}

@keyframes opacityChange {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

@keyframes logoOut {
  from {
    opacity: 1;
    top: 35vw;
  }

  to {
    opacity: 0;
    top: 20vw;
    z-index: -10;
  }
}

.login_page {
  z-index: 20;
}

.welcome_word1 {
  margin-left: 5vw;
  font-size: 2.75rem;
}

.welcome_word2 {
  margin-left: 5vw;
  margin-top: 5vw;
}

.logo {
  border-radius: 50%;
  border: 1px solid #0b0f14;
  color: #8696a7;
  width: 5rem;
  height: 5rem;
  line-height: 5rem;
  text-align: center;
  margin-left: 15%;
  background-color: white;
}

.head {
  display: flex;
  margin-top: calc(50vh - 33vw);
}

.key-input-show {
  margin-top: calc(50vh - 36vw);
}

.head_content {
  animation: transYbottom 1s forwards;
  font-weight: bold;
  font-size: 44rpx;
  color: black;
  text-align: center;
  width: 100vw;
}

.prewords {
  color: black;
  font-size: 30rpx;
  font-weight: bold;
}

.email_container {
  animation: transYbottom 1s forwards;
  margin-left: 125rpx;
  position: relative;
}

.email_input {
  width: 65%;
  height: 40rpx;
  text-decoration: none;
  border-bottom: black 1px solid;
  padding-left: 1rem;
  box-sizing: border-box;
  position: relative;
}

.email_input_false {
  padding-left: 0;
  border-bottom: red 1px solid;
}

.email_input::after {
  position: absolute;
  bottom: 0;
  right: 0;
  content: "@hust.edu.cn";
  color: black;
  font-size: 26rpx;
  line-height: 40rpx;
  font-weight: 500;
}

.key_container {
  margin-top: 1rem;
  margin-left: 95rpx;
  line-height: 2rem;
}

.key_input {
  width: calc(70% - 0.5rem);
  height: 2rem;
  text-decoration: none;
  border-bottom: #656565 1px solid;
  padding-left: 1rem;
  box-sizing: border-box;
}

.submit_button {
  background-color: #333333;
  color: #FFF9F9;
  width: 230rpx;
  margin: 2.5rem auto 0;
  border-radius: 20rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 50rpx;
  font-weight: normal;
  letter-spacing: 1px;
  box-shadow: #ececea 1px 1px 5px;
}

.main_button {
  animation: opacityChange 1s forwards;
}

.key_input_false {
  width: calc(70% - 0.5rem);
  height: 2rem;
  text-decoration: none;
  border-bottom: red 1px solid;
  padding-left: 1rem;
  box-sizing: border-box;
}

.travel_mode {
  text-align: center;
  margin-top: 40rpx;
  color: #797979;
  font-size: 24rpx;
}

.backImage {
  position: absolute;
  z-index: -10;
  width: 138vw;
  left: -19vw;
  top: calc(50vh - 69vw);
  transition: all 0.3s;
  opacity: 1;
}

.backImage_out {
  animation: logoOut 0.3s forwards;
}


.backImage1 {
  position: absolute;
  z-index: -10;
  width: 138vw;
  left: -19vw;
  top: 35vw;
}

.fresh_button {
  text-align: center;
  margin-top: 40rpx;
  color: #656565;
  font-size: small;
}