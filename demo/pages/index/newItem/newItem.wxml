<!--新建帖子-->
<view class="return" bindtap="returnIndex"></view>
<view class="release_container">
<view class="head_container">
  <view>标题：</view>
  <input placeholder="填写标题" bindinput="canRelease" model:value="{{title}}" class="haed_input" placeholder-class="head_input" maxlength="20"/>
</view>
  <textarea name="" id=""  class="detail {{detailInput?'':'detail_clear'}}" bindtap="clearContent" model:value="{{detail}}" bindblur="showPlaceholder" maxlength="1000"></textarea>
  <view class="image_container">
    <view wx:for="{{imageList}}" wx:key="{{index}}" style="position: relative;">
      <image src="{{item}}" class="image" wx:if="{{imageList.length}}" bindtap="imgLarge" data-url="{{item}}" ></image>
      <view class="image_delete" bindtap="deleteImage" data-index="{{index}}"></view>
    </view>
    <view class="upload_image" bindtap="uploadImg"><view class="add_icon"></view></view>
  </view>
</view>
<view class="choose {{isChooseTag?'':'noChoose'}}" bindtap="chooseTag">{{tag}}</view>
<view class="line"></view>
<view class="choose {{isChooseLocation?'':'noChoose'}}" bindtap="chooseLocation">{{location}}</view>
<view class="line"></view>
<input placeholder="期望售价" class="price" model:value="{{price}}" bindinput="priceCheck" maxlength="6"/>
<view class="line"></view>
<view class="release {{canUpload?'':'cannotRelease'}}" bindtap="releaseItem">发布物品</view>
<image  mode="widthFix" src="{{imgLargeUrl}}" class="largeImg" wx:if="{{imgLargeUrl}}"></image>
<view class="gray_back" wx:if="{{imgLargeUrl}}" bindtap="imageLargeClose"></view>


