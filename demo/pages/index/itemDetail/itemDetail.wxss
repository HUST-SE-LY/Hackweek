/* pages/index/itemDetail/itemDetail.wxss */
page {
  background-color: #f5f5f5;
}
.post-container {
  background-color: rgb(169, 169, 169);
  margin-bottom: 30rpx;
  padding: 0 50rpx;
  display: flex;
  flex-direction: column;
  border-radius:40rpx 40rpx;
  color: #333333;
  width: 90vw;
  margin-left: 5vw;
  margin-top: 20rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.header .left {
  display: flex;
  align-items: center;
  gap:20rpx;
}

.header .left image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}

.header .more {
  height: 40rpx;
  width: 40rpx;
}

.second-line {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.second-line .title {
  width: 500rpx;
  text-align: center;
  font-weight: bold;
}

.second-line .right {
  font-size: 26rpx;
}

.second-line .right .contact {
  position: relative;
  width: 180rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #c1cbd7;
  color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
}

.second-line .right .contact image {
  height: 36rpx;
  width: 36rpx;
  margin-right: 10rpx;
}

.second-line .right .price {
  position: absolute;
  right: 120rpx;
  font-weight: bold;
}

.content {
  margin-top: 40rpx;
  display: -webkit-box;
  letter-spacing: 0.0015em;
  line-height: 1.5em;

}

.location {
  margin-top: 20rpx;
  align-self: flex-end;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.6);
}
.footer {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}
.footer .item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.6);
  margin-right: 20rpx;
  margin-left: 0;
}
.footer image {
  height: 45rpx;
  width: 45rpx;
  margin-right: 10rpx;
}
.footer .right {
  display: flex;
}
.commentsContainer {
  width: 100vw;
  box-sizing: border-box;
  padding: 0 5% 5% 5%;
  background-color: white;
}
.devider {
  height: 10vh;
  width: 100vw;
}

.comment_head {
  background-color: white;
  height: 3em;
  line-height: 3em;
  box-sizing: border-box;
  padding: 0 0 0 50rpx;
  font-weight: bold;
  border-bottom: #f5f5f5 1px solid;

}

.comment {
  position: fixed;
  bottom: 0;
  padding: 5vw;
  width: 100vw;
  background-color: white;
  box-sizing: border-box;
  color: #333333;
}
.comment_input {
  border-radius: 25rpx;
  height: 3em;
  padding-left: 1em;
  margin-bottom: 2vh;
  background-color: #f5f5f5;

}
.comment_reply {
  position: fixed;
  bottom: 0;
  padding: 5vw;
  border-top: lightgray 1px solid;
  width: 100vw;
  background-color: white;
  box-sizing: border-box;
}
.comment_input_display {
  display: none;
}
.comment_reply_display {
  display: none;
}
.image_list {
  display: flex;
  flex-wrap: wrap;
  column-gap: 10vw;
  row-gap: 5vw;
  padding-top: 30rpx;
}
.image {
  width: 20vw;
  height: 20vw;
}
.contactInfoContainer .contactInfo {
  position: fixed;
  top: 37vh;
  left: 50rpx;
  width: 650rpx;
  height: 15vh;
  background-color: #fff;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  z-index: 10;
}

.contactInfoContainer .contactInfo .content {
  line-height: 6vh;
  margin: 5rpx 30rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.contactInfoContainer .contactInfo .content .copy{
  border: 1px solid rgba(0, 0, 0, 0.4);
  width: 100rpx;
  line-height: 4vh;
  text-align: center;
  border-radius: 15rpx;
}
.contactInfoContainer .contactInfo .divider {
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.share {
  background: transparent;
  display: block;
  padding-left: 0;
  padding-right: 40rpx;
  box-sizing: border-box;
  text-align: left;
}
.noLogin {
  width: 100vw;
  text-align: center;
  color:#d0d0d0;
  margin-top: 50rpx;
}