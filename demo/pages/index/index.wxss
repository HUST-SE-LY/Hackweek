/**index.wxss**/
page {
  background-color: #f7f7f7;
}
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  display: flex;
  justify-content: space-around;
  z-index: 1;
  background-color: black;
}

.tabbar-item {
  margin: 25rpx 50rpx;
  text-align: center;
  font-size: 26rpx;
  color: white;
}
.tabbar-item image {
  height: 50rpx;
  width: 50rpx;
}

.write_post {
  width: 120rpx;
  height: 120rpx;
  background-color: black;
  border-radius: 50%;
  box-sizing: border-box;
  transform: translateY(-30rpx);
}

.write_post image {
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin-left: 10rpx;
  margin-top: 10rpx;

}

