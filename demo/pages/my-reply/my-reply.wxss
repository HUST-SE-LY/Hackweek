/* pages/my-follow/my-reply.wxss */
view {
  word-break: break-all;
}
.header {
  font-size: large;
  text-align: right;
  margin-right: 5vw;
  font-weight: 600;
  padding-bottom: 20rpx;
  margin-left: 5vw;
  border-bottom: lightgray 1px solid;
}
.reply {
  padding: 40rpx 5vw 40rpx 5vw;
  border-bottom: lightgray 1px solid;
  margin: 0 5vw 0 5vw;
  display:flex;
  width: 80vw;
  flex-shrink: 0;
}
.time {
  margin-left: auto;
  min-width: 4em;
  text-align: right;
}
.reply_container {
  display:flex;
  overflow: scroll;
}
.reply_container::-webkit-scrollbar {
  display: none;
}
.delete {
  width: 20vw;
  text-align: center;
  padding-top: 40rpx;
  background-color: lightskyblue;
  scroll-behavior: smooth;
  flex-shrink: 0;
}

.no_post {
  text-align: center;
  height: 30px;
  font-size: 12px;
  line-height: 30px;
  background-color: white;
}

@keyframes loading {
  from {
    transform: rotate(0deg);
  } to {
    transform: rotate(360deg);
  }
}
.loading_container {
  width: 80rpx;
  height: 80rpx;
  position: relative;
  background:  -webkit-linear-gradient(#333333,#333333,#333333,transparent,transparent);
  margin: 30rpx auto;
  border-radius: 50%;
  box-sizing: border-box;
  animation: loading 1s infinite linear;
 
}
.loading_hider {
  position: absolute;
  top: 10rpx;
  left: 2rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}